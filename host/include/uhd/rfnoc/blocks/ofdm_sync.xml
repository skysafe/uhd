<!--This defines one NoC-Block.-->
<nocblock>
  <name>OFDM Synchronizer</name>
  <blockname>OFDMSync</blockname>
  <!--There can be several of these:-->
  <ids>
    <id revision="0">0FD3000100000000</id>
  </ids>
  <!-- Registers -->
  <registers>
    <setreg>
      <name>NUM_SYMBOLS</name>
      <address>129</address>
    </setreg>
    <setreg>
      <name>FORCE_NUM_SYMBOLS</name>
      <address>130</address>
    </setreg>
    <setreg>
      <name>PASSTHRU</name>
      <address>131</address>
    </setreg>
  </registers>
  <!-- Args -->
  <args>
    <arg>
      <name>num_symbols</name>
      <type>int</type>
      <value>10</value>
      <action>SR_WRITE("NUM_SYMBOLS", $num_symbols)</action>
    </arg>
    <arg>
      <name>force_num_symbols</name>
      <type>int</type>
      <value>0</value>
      <action>SR_WRITE("FORCE_NUM_SYMBOLS", $force_num_symbols)</action>
    </arg>
    <arg>
      <name>passthru</name>
      <type>int</type>
      <value>0</value>
      <action>SR_WRITE("PASSTHRU", $passthru)</action>
    </arg>
  </args>
  <ports>
    <sink>
      <name>in</name>
      <type>sc16</type>
    </sink>
    <source>
      <name>out</name>
      <type>sc16</type>
      <vlen>64</vlen>
      <pkt_size>%vlen</pkt_size>
    </source>
  </ports>
</nocblock>
